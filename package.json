{
  "name": "worldhost",
  "version": "1.0.0",
  "description": "A TypeScript monorepo for WorldHost",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test": "pnpm -r test:run",
    "test:watch": "pnpm --filter server test",
    "dev": "pnpm --filter @worldhost/server dev",
    "dev:server": "pnpm --filter @worldhost/server dev",
    "seed": "node seed-demo.js",
    "seed:prod": "pnpm --filter server seed",
    "start": "pnpm --filter @worldhost/server dev",
    "start:prod": "pnpm --filter @worldhost/server build && node packages/server/dist/index.js",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "client:random": "node random-client.js",
    "client:random:term": "cmd /c start \"WorldHost Random Client\" cmd /k pnpm client:random"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "ws": "^8.18.3"
  },
  "pnpm": {
    "overrides": {
      "typescript": "$typescript"
    }
  }
}
