{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../shared" }
  ]
}
